<% provide :title, t("profile") %>
<div class="row form_user">
  <div class="col-sm-6 center_form format_form">
    <div class="home_title">
      <h2 class="title"><%= t "welcome" << ": #{@user.name}" %></h2>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-2 col-lg-2 " align="center"></div>
        <div class=" col-md-9 col-lg-9 ">
          <table class="table table-user-information">
            <tbody>
              <tr>
                <td><%= t "name" %></td>
                <td><%= @user.name %></td>
              </tr>
              <tr>
                <td><%= t "email" %></td>
                <td><%= @user.email %></td>
              </tr>
              <tr>
                <td><%= t "regiter_day" %></td>
                <td><%= l @user.created_at, format: :date_month_year_concise %>
                </td>
              </tr>
              <tr>
                <td><%= t "phone" %></td>
                <td><%= @user.phone %></td>
              </tr>
              <tr>
                <td><%= t "address" %></td>
                <td><%= @user.address %></td>
              </tr>
            </tbody>
          </table>
          <%= link_to t("edit_profile"), edit_user_path(current_user),
          class: "btn btn-custom btn-success" %>
          <%= link_to t("change_password"), "#",
          class: "btn btn-custom btn-info" %>
        </div>
      </div>
    </div>
  </div>
</div>
